{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "javac : java build active file",
			"command": "javac ${file} && cd ${fileDirname} && java Main",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
			"kind": "build",
			"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
			  "-std=c++17",
			  "${file}",
			  "-o",
			  "${fileDirname}/${fileBasenameNoExtension}.out",
	  
			  // 1. execute .out file
			  "&&", //to join building and running of the file
			  "${fileDirname}/${fileBasenameNoExtension}.out",
			],
			"options": {
			  "cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		  }
	]
}